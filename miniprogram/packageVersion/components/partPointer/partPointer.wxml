<view wx:if="{{showType!='none'}}" class="pointer-container">
    <image class="point" src="../../../assets/icon/bodySelect/pointerPoint.svg">
    </image>
    <block wx:if="{{showType==='left'}}">
        <view class="left">
            <view class="line-1"></view>
            <view class="line-2"></view>
            <view class="label">{{language[label]}}</view>
        </view>
    </block>
    <block wx:elif="{{showType==='right-mid-long'}}">
        <view class="right-mid-long">
            <view class="line-1"></view>
            <view class="label">{{language[label]}}</view>
        </view>
    </block>
    <block wx:elif="{{showType==='left-mid-long'}}">
        <view class="left-mid-long">
            <view class="line-1"></view>
            <view class="label">{{language[label]}}</view>
        </view>
    </block>
    <block wx:elif="{{showType==='right-short'}}">
        <view class="right-short">
            <view class="line-1"></view>
            <view class="label">{{language[label]}}</view>
        </view>
    </block>
    <block wx:elif="{{showType==='right-high'}}">
        <view class="right-high">
            <view class="line-1"></view>
            <view class="line-2"></view>
            <view class="label">{{language[label]}}</view>
        </view>
    </block>
    <block wx:else>
        <view class='right'>
            <view class="line-1"></view>
            <view class="line-2"></view>
            <view class="label">{{language[label]}}</view>
        </view>
    </block>
</view>